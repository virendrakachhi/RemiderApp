<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/navigationBackButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ceee"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@color/blue"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@color/blue"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="left|start"
                    android:background="@android:color/transparent"
                    android:onClick="gotoBack"
                    android:scaleType="fitXY"
                    android:src="@drawable/home_white" />

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right|end"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:src="@drawable/question_mark" />

            </FrameLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/view"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="View"
                android:textColor="@color/white"
                android:textSize="23sp" />


            <ListView
                android:id="@+id/userViewsListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dark_blue"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/editAccountButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/editcount"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:text=" Edit Account"
                        android:textColor="@color/white"
                        android:textSize="23sp" />

                    <TextView
                        android:id="@+id/addViewButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/addview"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:text=" Add view"
                        android:textColor="@color/white"
                        android:textSize="23sp" />

                    <LinearLayout
                        android:id="@+id/notificationsButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/viewNotifications"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/notific"
                            android:drawablePadding="10dp"
                            android:gravity="center_vertical"
                            android:padding="10dp"
                            android:text=" Notifications"
                            android:textColor="@color/white"
                            android:textSize="23sp" />

                        <TextView
                            android:id="@+id/notificationStatus"
                            android:layout_width="50dp"
                            android:layout_height="35dp"
                            android:layout_marginRight="5dp"
                            android:background="#eeee"
                            android:gravity="center"
                            android:text="On"
                            android:textColor="@color/dark_blue"
                            android:textSize="18sp" />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/storeButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/storemenu"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:text="Store"
                        android:textColor="@color/white"
                        android:textSize="23sp" />

                    <TextView
                        android:id="@+id/logoutButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/icon_logout"
                        android:drawablePadding="15dp"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:text="Log out"
                        android:textColor="@color/white"
                        android:textSize="23sp" />

                    <TextView
                        android:id="@+id/schoolDisttCompanyName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:text="School/District/Company"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/contactUsButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/contactus"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:text=" Contact us"
                        android:textColor="@color/white"
                        android:textSize="23sp" />

                    <TextView
                        android:id="@+id/faqButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/faq1"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:text=" FAQ"
                        android:textColor="@color/white"
                        android:textSize="23sp" />

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </FrameLayout>


    <FrameLayout
        android:id="@+id/navigationSwipe"
        android:layout_width="15dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true" />


</merge>